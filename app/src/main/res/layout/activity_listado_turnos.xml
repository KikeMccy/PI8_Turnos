<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".ListadoTurnosActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appbar_turnos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/toolbar_redondear"
        android:layout_marginRight="10dp"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="HORARIOS"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24sp"></TextView>
    <TextView
        android:id="@+id/textView_titulo_instituciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="Seleccione el un turno: "
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold|italic" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcl_horario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="125dp" />
</LinearLayout>