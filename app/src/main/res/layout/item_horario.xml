<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#D4F9E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txt_titulo_turno"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="50dp"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombre"
                android:layout_marginStart="10dp"
                android:text="Turno"
                android:textColor="@color/black"
                android:textSize="14dp" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tiket_turno" />

            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_titulo_hora_inicio"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombre"
                android:layout_marginStart="90dp"
                android:text="Hora de inicio: "
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_hora_incio"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombre"
                android:text="inicio"
                android:textColor="#8A000000"
                android:textSize="14dp" />

            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_titulo_hora_fin"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombre"
                android:layout_marginStart="90dp"
                android:text="Hora de finalizaciÃ³n: "
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_hora_fin"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombre"
                android:text="fin"
                android:textColor="#8A000000"
                android:textSize="14dp" />
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/txt_titulo_estado"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombre"
                android:layout_marginStart="90dp"
                android:text="Estado: "
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_estado_turno"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombre"
                android:text="estado"
                android:textColor="#8A000000"
                android:textSize="14dp" />
            ></LinearLayout>
            <ImageView
                android:id="@+id/img_solicitar_turno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/asignar_turno" />



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>