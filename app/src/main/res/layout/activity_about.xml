<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_about"
    android:background="@drawable/fondo_degradado"
    tools:context=".AboutActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appbar_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/toolbar_redondear"
        android:layout_marginRight="10dp"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="ACERCA DE LA APP"
        android:textColor="#9C27B0"
        android:textSize="24sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/copyright_60px" />
        <TextView
            android:id="@+id/textviewcre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            android:text="Creditos"
            android:textColor="#4DB6AC"
            android:textSize="17dp"
            android:textStyle="bold"/>



    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@android:color/transparent"
        >
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Esta aplicación fue realizada en la materia de Proyecto Integrador del módulo VIII, en el periodo 2020-2021. \nCon el tutor: Jorge Saa"
            android:textSize="15dp"
            android:textAlignment="textStart"
            android:textColor="#0027FF"
            android:textStyle="italic"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textviewDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="EQUIPO DE DESARROLLO"
        android:textColor="#4DB6AC"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:text="BAÑO MERA JAIME FABRICIO"
        android:textColor="#737373"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="CELI YELA MANUEL CELSO"
        android:textColor="#737373"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="TAQUEZ AURA"
        android:textColor="#737373"
        android:textStyle="bold"/>
    <!--<TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="VEGA NEYSER"
        android:textColor="#737373"
        android:textStyle="bold"/>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Para contactarnos escribir al correo: \n\npi8semestre@gmail.com"
        android:textColor="@color/black"
        />
</LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_about"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu_navigation" />

</androidx.drawerlayout.widget.DrawerLayout>