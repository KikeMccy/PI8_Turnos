<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#D4F9E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/txt_institucion_turno"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgPortada"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Nombre"
                android:textSize="24sp"
                app:layout_constraintTop_toBottomOf="@+id/imgPortada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                >
            >

            <TextView
                android:id="@+id/txt_titulo_fecha_turno"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombre"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:text="Fecha de turno:"
                android:textColor="#8A000000"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_fecha_turno"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombre"
                android:layout_marginTop="10dp"
                android:text="Fecha"
                android:textColor="#8A000000"
                android:textSize="18sp"
                android:textStyle="italic" />
            ></LinearLayout>
            <ImageView
                android:id="@+id/img_tickets"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/ticket_turno" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>